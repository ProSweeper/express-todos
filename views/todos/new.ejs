<!-- action attribute specifies the path where the form submits its info -->
<!-- the method attribute is the HTTP method -->
<form action="/todos" method="POST">
    <!-- inputs lack closing tags since inputs lack content -->
    <!-- inputs are considered empty elements -->
    <!-- the name attribute is what the server will see -->
    <!-- and what the middleware will see in terms of data being sent to it -->
    <!-- we want this name to match the name in the model -->
    <input type="text" name="todo">
    <button type="submit">Save To-Do</button>
</form>

